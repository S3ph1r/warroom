# =============================================
# WAR ROOM - Environment Variables Template
# =============================================
# COPY this file to .env and fill in your values
# NEVER commit the .env file to Git!
# =============================================

# ===== DATABASE =====
DATABASE_URL=postgresql://warroom:YOUR_SECURE_PASSWORD_HERE@localhost:5432/warroom_db
POSTGRES_USER=warroom
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=warroom_db

# ===== SECURITY =====
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=GENERATE_64_CHAR_RANDOM_KEY_HERE
JWT_SECRET=GENERATE_ANOTHER_64_CHAR_KEY_HERE
MASTER_ENCRYPTION_KEY=GENERATE_THIRD_64_CHAR_KEY_HERE

# ===== AI (Hybrid: Local + Cloud) =====
# Local (Default)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral-nemo:latest

# Cloud (The Council)
# Google AI Studio: https://aistudio.google.com/app/apikey (GRATIS)
GOOGLE_API_KEY=your_google_ai_key

# OpenRouter: https://openrouter.ai/keys (DeepSeek/Claude/Qwen)
OPENROUTER_API_KEY=your_openrouter_key

# ===== REDDIT API =====
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=WarRoom/1.0

# ===== NEWS APIs (Optional) =====
# NewsAPI: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key
# Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alphavantage_key

# ===== TELEGRAM BOT =====
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF_your_token
# Get your ID from @userinfobot
TELEGRAM_USER_ID=your_numeric_user_id

# ===== CLOUDFLARE TUNNEL (Optional) =====
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token

# ===== GOOGLE DRIVE INBOX =====
# Path to inbox folder on Google Drive (mapped by Drive for Desktop)
INBOX_ROOT_PATH=G:/Il mio Drive/WAR_ROOM_DATA/inbox
PROCESSED_ROOT_PATH=G:/Il mio Drive/WAR_ROOM_DATA/processed
# Warning threshold for stale imports (days)
IMPORT_WARNING_DAYS=30
